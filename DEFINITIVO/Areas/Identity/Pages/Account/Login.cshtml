@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="/css/Pagina_Login.css" rel="stylesheet" type="text/css">
<script src="https://apis.google.com/js/platform.js" async defer></script>
<script src="~/js/Login.js"></script>


<h1>@ViewData["Title"]</h1>
<div>
    <section>
        <div>
            <p>Por favor, ingresa con una de las siguientes opciones</p>
        </div>
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                        for details on setting up this ASP.NET application to support logging in via external services.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p id="parrafo-superior-el">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" style="width:auto;" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
        <div>
            <hr />
        </div>
    </section>
    <section>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row inputs">
                <div class="form-group">
                    <label style="width: 100%; text-align: left;" asp-for="Input.Email">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row inputs">
                <div class="form-group">
                    <label style="width: 100%; text-align: left;" asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <p id="recuperar-password">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </div>
            <div class="row" id="div-boton-login">
                <div class="form-group col-3">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
                <div class="form-group col-9" id="keep-session">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Mantener mi sesión abierta
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



