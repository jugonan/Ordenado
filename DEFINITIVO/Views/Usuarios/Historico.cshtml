@model List<ProductoPrimeraOpcionProductoVM>

@using Heldu.Logic.ViewModels
@using Microsoft.AspNetCore.Identity
@using Heldu.Logic.Interfaces

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IManejoProductosService ManejoProductosService
@{
    Usuario usuario = ViewBag.Usuario;
    List<Producto> comprados = ManejoProductosService.GetProductosComprados(usuario.Id);
    List<Producto> disponibles = ManejoProductosService.GetProductosDisponibles(usuario.Id);
    // Pendiente de añadir productos canjeados
    //List<Producto> canjeados = servicios.GetProductosCanjeados(Model.Id);
}

<!-- CSS Personalizado -->
<link href="~/css/Usuarios_Historico.css" rel="stylesheet" type="text/css">


<div class="row" style="margin-top:10%;">
    <partial name="_MiperfilPV" />
    <div class="col-8 offset-1" style="width: 66%;background-color: aquamarine;">
        <h3>Histórico</h3>
        @*Cuadro blanco*@
        <label for="cupones-en-perfil">Tus cupones</label>
        <select class="form-control" id="cupones-en-perfil">
            <option value="">Seleccionar</option>
            <option value="1">Disponibles</option>
            <option value="2">Comprados</option>
            <option value="3">Utilizados</option>
        </select>
        <div>
            <!-- Bucle para crear una línea de cupón por cada cupón COMPRADO -->
            @foreach (Producto comprado in comprados)
            {
                <div class="row seccion-comprados d-none seccion-cupones" style="margin:0px;">
                    <div class="col-3">
                        <h6><strong>Fecha de validez: </strong></h6>
                        <br />
                        <p>@comprado.FechaValidez</p>
                    </div>
                    <div class="col-3">
                        <img style="width:60%;" src="~/Productos/GetImage1/@comprado.Id" />
                    </div>
                    <div class="col-3">
                        <h6>Comprado el: </h6>
                        <p style="color:red;">Pendiente de añadir a la tabla</p>
                    </div>
                    <div class="col-3">
                        <a class="btn">Boton para detalles</a>
                        <a> Link para el documento</a>
                    </div>
                </div>
            }
            <!-- Fin del bucle para crear una línea de cupón por cada cupón -->
            <!-- Bucle para crear una línea de cupón por cada cupón DISPONIBLE -->
            @foreach (Producto disponible in disponibles)
            {
                <div class="row seccion-disponibles d-none seccion-cupones" style="margin:0px;">
                    <div class="col-3">
                        <h6><strong>Fecha de validez: </strong></h6>
                        <br />
                        <p>@disponible.FechaValidez</p>
                    </div>
                    <div class="col-3">
                        <img style="width:60%;" src="~/Productos/GetImage1/@disponible.Id" />
                    </div>
                    <div class="col-3">
                        <h6>Comprado el: </h6>
                        <p style="color:red;">Pendiente de añadir a la tabla</p>
                    </div>
                    <div class="col-3">
                        <a class="btn">Boton para detalles</a>
                        <a> Link para el documento</a>
                    </div>
                </div>
            }
            <!-- Fin del bucle para crear una línea de cupón por cada cupón -->
        </div>
    </div>
</div>
<!------ Carousel productos recomendados y consumidos por amigos ---------->
<div>
    <div class="row">
        <div class="col-6">
            <div>
                <h2>Productos que has visto</h2>
            </div>
            <div class="row">
                @{
                    if (!Model.Any())
                    {
                        <h5>¡Vaya, parece que aún no has visitado ningún producto!</h5>
                        <p>Échale un vistazo a nuestros productos haciendo clic <a>aquí</a></p>
                    }
                    else
                    {
                        if (Model.Count < 3)
                        {
                            foreach (ProductoPrimeraOpcionProductoVM item in Model)
                            {
                                <div class="card col-4" style="width: 18rem;">
                                    <div class="row" style="justify-content:space-around">
                                        <div>
                                            <h5 style="text-decoration:line-through">@item.opcionProducto.PrecioInicial €</h5>
                                        </div>
                                        <div>
                                            <h5>@item.opcionProducto.PrecioFinal €</h5>
                                        </div>
                                    </div>
                                    <img src="~/Productos/GetImage1/@item.producto.Id" class="card-img-top" alt="@item.producto.Titulo">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.producto.Titulo"</h5>
                                        <p class="card-text">@item.producto.Descripcion"</p>
                                        <a href="#" class="btn btn-primary">Inactivo</a>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 3; i++)
                            {
                                <div class="card col-4" style="width: 18rem;">
                                    <div class="row" style="justify-content:space-around">
                                        <div>
                                            <h5 style="text-decoration:line-through">@Model[i].opcionProducto.PrecioInicial €</h5>
                                        </div>
                                        <div>
                                            <h5>@Model[i].opcionProducto.PrecioFinal €</h5>
                                        </div>
                                    </div>
                                    <img src="~/Productos/GetImage1/@Model[i].producto.Id" class="card-img-top" alt="@Model[i].producto.Titulo">
                                    <div class="card-body">
                                        <h5 class="card-title">@Model[i].producto.Titulo"</h5>
                                        <p class="card-text">@Model[i].producto.Descripcion"</p>
                                        <a href="#" class="btn btn-primary">Inactivo</a>
                                    </div>
                                </div>
                            }
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
<script src="/js/Historico.js"></script>