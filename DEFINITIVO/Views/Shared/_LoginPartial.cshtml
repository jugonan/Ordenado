@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<cache enabled="false">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col-2 offset-1" id="div-cabecera-salir">
            @if (User.IsInRole("cliente"))
            {
                <div id="anchor-miperfil">
                    <a class="nav-link anchor-miperfil" asp-controller="Usuarios" asp-action="MiCuenta">@User.Identity.Name!</a>
                </div>
                <div class="desplegable-salir">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                        <button type="submit" class="nav-link btn btn-link"><p class="boton-salir-usuario">Salir</p></button>
                    </form>
                </div>
            }
            @if (User.IsInRole("vendedor"))
            {
                <div id="anchor-miperfil">
                    <a class="nav-link anchor-miperfil" asp-controller="Vendedores" asp-action="Miperfil">@User.Identity.Name!</a>
                </div>
                <div class="desplegable-salir">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                        <button type="submit" class="nav-link btn btn-link textType2"><p class="boton-salir-usuario">Salir</p></button>
                    </form>
                    <a asp-area="" asp-controller="Vendedores" asp-action="Misproductos2">Gestionar Productos</a>
                </div>
            }
            @if (User.IsInRole("admin"))
            {
                <div>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link textType2">Salir</button>
                    </form>
                </div>
            }
        </div>
    }
    else
    {
        <div class="col-3 nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Ingresar</a>
        </div>
    }
</cache>
