@model Heldu.Entities.Models.Producto

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/opcionesProductos_Create.css" rel="stylesheet" type="text/css">
<script src="~/js/OpcionesProductosCreate.js"></script>

<h1>Cargar producto</h1>


<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">(*) Campos obligatorios</div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" id="descripcion-introducida" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" id="precioInicial-introducido" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioFinal" class="control-label"></label>
                <input asp-for="PrecioFinal" class="form-control" id="precioFinal-introducido" />
                <span asp-validation-for="PrecioFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadesStock" class="control-label"></label>
                <input asp-for="UnidadesStock" class="form-control" />
                <span asp-validation-for="UnidadesStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <!-- Quiero poner aquí un layout de cómo se lucirá la oferta que está cargando-->
    <div class="col-md-8">
        <h4>@Model.Titulo</h4>
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-7">
                    <div id="carouselExampleControls" class="carousel slide" data-interval="false" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="data:image/png;base64,@System.Convert.ToBase64String(@Model.ImagenProducto)">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="data:image/png;base64,@System.Convert.ToBase64String(@Model.ImagenProducto2)">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="data:image/png;base64,@System.Convert.ToBase64String(@Model.ImagenProducto3)">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="row">
                        <img alt="..." src="data:image/png;base64,@System.Convert.ToBase64String(@Model.ImagenProducto)" class="img-thumbnail">
                        <img alt="..." src="data:image/png;base64,@System.Convert.ToBase64String(@Model.ImagenProducto2)" class="img-thumbnail">
                        <img alt="..." src="data:image/png;base64,@System.Convert.ToBase64String(@Model.ImagenProducto3)" class="img-thumbnail">
                    </div>
                    <div>
                        <h5>Descripción del producto: </h5>
                        <p>@Model.Descripcion</p>
                    </div>
                    <div style="align-self:center; margin-bottom:5%;">
                        <div>
                            <h4>Fecha de validez:</h4>
                            <p>@Model.FechaValidez</p>
                            <br />
                        </div>
                        <h4>Condiciones</h4>
                        <br />
                        <label><strong>Reserva</strong></label>
                        <ul class="d-none" id="ulReserva">
                         @foreach(string horario in ViewBag.Reservas)
                         {
                             <li>@horario</li>
                         }
                        </ul>
                        <br />
                        <label><strong>Horario</strong></label>
                        <ul class="d-none" id="ulHorario">
                            @foreach (string reserva in ViewBag.Horario)
                            {
                                <li>@reserva</li>
                            }
                        </ul>
                        <br />
                        <label><strong>Entrega</strong></label>
                        <ul class="d-none" id="ulEntrega">
                            @foreach (string entrega in ViewBag.Entregas)
                            {
                                <li>@entrega</li>
                            }
                        </ul>
                        <br />
                        <label><strong>Recogida</strong></label>
                        <ul class="d-none" id="ulRecogida">
                            @foreach (string recogida in ViewBag.Recogidas)
                            {
                                <li>@recogida</li>
                            }
                        </ul>
                        <br />
                        <label><strong>Otros</strong></label>
                        <ul class="d-none" id="ulOtros">
                            @foreach (string otros in ViewBag.Otros)
                            {
                                <li>@otros</li>
                            }
                        </ul>
                    </div>
                    <!-- Div que incluye todos los comentarios existentes-->
                </div>
                <div class="details col-md-5">
                    <div>
                        <!-- Modificar Nombre de empresa con js-->
                        <h6>@ViewBag.Vendedor.NombreDeEmpresa</h6>
                        <div class="rating row">
                            <div class="col-4">
                                <p>(nº de visitas)</p>
                            </div>
                            <div class="stars-fijas col-8">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <p>82 reviews</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <div class="col-6 offset-6">
                                <div>
                                    <div class="row precios-opcion">
                                        <div class="col-6" style="display:flex;">
                                            <!-- Modificar Precio inicial y mostrar símbolo de € con js-->
                                            <h4><strike id="precioInicial-demo"></strike></h4>
                                            <h4 class="simbolo-euro d-none"><strike>€</strike></h4>
                                        </div>
                                        <div class="col-6" style="display:flex;">
                                            <!-- Modificar Precio final y mostrar símbolo de € con js-->
                                            <h4 style="color: green;"><strong id="precioFinal-demo"></strong></h4>
                                            <h4 class="simbolo-euro d-none" style="color: green;"><strong>€</strong></h4>
                                        </div>
                                    </div>
                                    <p id="descuento-demo"></p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">
                                <h4>Opciones de producto: </h4>
                                <form>
                                    <input class="inputOpciones d-none" name="opcionesProducto" type="radio" /><br>
                                    <input class="inputOpciones d-none" name="opcionesProducto" type="radio" /><br>
                                    <input class="inputOpciones d-none" name="opcionesProducto" type="radio" /><br>
                                </form>
                                <p id="descripcion-demo"></p>
                            </div>
                            <div class="col-10">
                                <p class="titulo-opciones"></p>
                                <div class="row precios-opciones">
                                    <div class="col-4 offset-4" style="display:flex;">
                                        <h4><strike class="precioInicial-demo"></strike></h4>
                                        <h4 class="simbolo-euro d-none"><strike>€</strike></h4>
                                    </div>
                                    <div class="col-4" style="display:flex;">
                                        <h4 style="color: green;"><strong class="precioFinal-demo"></strong></h4>
                                        <h4 class="simbolo-euro d-none" style="color: green;"><strong>€</strong></h4>
                                    </div>
                                </div>
                                <div class="row precios-opciones">
                                    <div class="col-4 offset-4" style="display:flex;">
                                        <h4><strike class="precioInicial-demo"></strike></h4>
                                        <h4 class="simbolo-euro d-none"><strike>€</strike></h4>
                                    </div>
                                    <div class="col-4" style="display:flex;">
                                        <h4 style="color: green;"><strong class="precioFinal-demo"></strong></h4>
                                        <h4 class="simbolo-euro d-none" style="color: green;"><strong>€</strong></h4>
                                    </div>
                                </div>
                                <div class="row precios-opciones">
                                    <div class="col-4 offset-4" style="display:flex;">
                                        <h4><strike class="precioInicial-demo"></strike></h4>
                                        <h4 class="simbolo-euro d-none"><strike>€</strike></h4>
                                    </div>
                                    <div class="col-4" style="display:flex;">
                                        <h4 style="color: green;"><strong class="precioFinal-demo"></strong></h4>
                                        <h4 class="simbolo-euro d-none" style="color: green;"><strong>€</strong></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="display:grid">
                            <a href="#" style="margin: 2% 0%" class="disabled btn btn-outline-success">Agregar a carrito</a>
                            <a href="#" style="margin: 2% 0%" class="disabled btn btn-outline-danger">Añadir a favoritos<img style="width:6%; margin-left: 4%;" class="d-none" /></a>
                        </div>
                    </div>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index2">Volver al inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
