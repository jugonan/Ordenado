@model Heldu.Entities.Models.ProductoCategoria

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Create";
}

@*<link href="~/css/Producto_sCreate.css" rel="stylesheet" type="text/css">*@
<script src="~/js/Productos_Create.js"></script>

<h1>Cargar producto</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Pendiente de cambiar la acción hacia la que se dirige-->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">(*) Campos obligatorios</div>
            <!-- ESTOS PUNTOS AHORA ESTÁN EN LA VENTANA 2-->
            <div class="form-group">
                <label asp-for="Producto.Descripcion" class="control-label"></label>
                <input asp-for="Producto.Descripcion" class="form-control" id="descripcion-introducida" />
                <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Precio" class="control-label"></label>
                <input asp-for="Producto.Precio" class="form-control" id="precioInicial-introducido" />
                <span asp-validation-for="Producto.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.PrecioFinal" class="control-label"></label>
                <input asp-for="Producto.PrecioFinal" class="form-control" id="precioFinal-introducido" />
                <span asp-validation-for="Producto.PrecioFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.UnidadesStock" class="control-label"></label>
                <input asp-for="Producto.UnidadesStock" class="form-control" />
                <span asp-validation-for="Producto.UnidadesStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <!-- Quiero poner aquí un layout de cómo se lucirá la oferta que está cargando-->
    <div class="col-md-8">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-7">
                        <div class="carousel slide" data-interval="false" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <!-- Modificar SRC con js-->
                                    <img class="d-block w-100" id="imagen-demo" alt="...">
                                </div>
                                <!-- Modificar SRC con js-->
                                <div class="carousel-item">
                                    <img class="d-block w-100" alt="...">
                                </div>
                                <!-- Modificar SRC con js-->
                                <div class="carousel-item">
                                    <img class="d-block w-100" alt="...">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="row">
                            <!-- Modificar SRC con js-->
                            <img alt="..." id="thumbnail-demo" class="img-thumbnail">
                            <!-- Modificar SRC con js-->
                            <img alt="..." class="img-thumbnail">
                            <!-- Modificar SRC con js-->
                            <img alt="..." class="img-thumbnail">
                        </div>
                        <div>
                            <h5>El producto</h5>
                            <!-- Modificar Descripción con js-->
                            <p id="descripcion-demo"> </p>
                        </div>
                        <div style="align-self:center; margin-bottom:5%;">
                            <h5>Condiciones</h5>
                            <!-- Modificar Fecha con js-->
                            <p id="fecha-demo"><strong>Fecha de validez: </strong> </p><br />
                        </div>
                        <!-- Div que incluye todos los comentarios existentes-->
                    </div>
                    <div class="details col-md-5">
                        <div>
                            <!-- Modificar Nombre de empresa con js-->
                            <h6 id="nombreEmpresa-demo"></h6>
                            <div class="rating row">
                                <div class="col-4">
                                    <p>(nº de visitas)</p>
                                </div>
                                <div class="stars-fijas col-8">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                    <p>82 reviews</p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="row">
                                <!-- Modificar Titulo de producto con js-->
                                <h4 id="titulo-demo" style="text-transform:capitalize"> </h4>
                            </div>
                            <div class="row">
                                <div class="col-6 offset-6">
                                    <div>
                                        <div class="row">
                                            <div class="col-6" style="display:flex;">
                                                <!-- Modificar Precio inicial con js-->
                                                <h4><strike id="precioInicial-demo"></strike></h4>
                                                <h4><strike>€</strike></h4>
                                            </div>
                                            <div class="col-6" style="display:flex;">
                                                <!-- Modificar Precio final con js-->
                                                <h4 style="color: green;"><strong id="precioFinal-demo"></strong></h4>
                                                <h4 style="color: green;"><strong>€</strong></h4>
                                            </div>
                                        </div>
                                        <p id="descuento-demo"></p>
                                    </div>
                                </div>
                            </div>
                            <div style="display:grid">
                                <a href="#" style="margin: 2% 0%" class="disabled btn btn-outline-success">Agregar a carrito</a>
                                <a href="#" style="margin: 2% 0%" class="disabled btn btn-outline-danger">Añadir a favoritos<img style="width:6%; margin-left: 4%;" class="d-none" /></a>
                            </div>
                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index2">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}