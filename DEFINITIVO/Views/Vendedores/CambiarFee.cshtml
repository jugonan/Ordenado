@model Vendedor
@{
    ViewData["Title"] = "Modificar Fee";
}

<h3>Modificar Fee del comercio @Model.NombreDeEmpresa</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CambiarFee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group d-none">
                <label asp-for="Fee" class="control-label"></label>
                <input name="fee" class="form-control" required placeholder="@Model.Fee %">
                <span>El Fee debe ser un entero entre 0 y 99, indica el porcentaje de Fee de Heldu sobre el PVP</span>
                <br>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
