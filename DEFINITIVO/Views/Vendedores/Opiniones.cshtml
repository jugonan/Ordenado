@model Heldu.Entities.Models.Vendedor

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="~/js/Opiniones_Vendedores.js"></script>
<link href="/css/Vendedores_Opiniones.css" rel="stylesheet" type="text/css">

<div class="cuadro-vendedor">
    <div class="row">
        <h3 class="col-4 offset-4">Datos de empresa</h3>
        <a class="col-3" asp-action="Edit" asp-route-id="@Model.Id"><img style="max-width:10%;" align="right" src="https://image.flaticon.com/icons/svg/1159/1159633.svg" /></a>
    </div>
    <div class="row">
        <partial name="_MiperfilPV" model="Model" />
        <div class="col-7 offset-1">
            @*Cuadro blanco*@
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        @if (ViewBag.MediaReviews != 0)
                        {
                            <h5 id="titulo-media" title="@ViewBag.MediaReviews">Media total</h5>
                            <br />
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        }
                    </div>
                    <!-- Parte en la que introduzco comentarios la azar de consumidores del producto -->
                    <div class="col-md-8">
                        <div id="row-de-prueba" class="row">
                            <!-- Parte del foreach-->
                            @if (ViewBag.ReviewsDelVendedor.Count != 0)
                            {
                                @foreach (Review review in ViewBag.ReviewsDelVendedor)
                                {
                                    <div class="card col-3 offset-1" style="width: 18rem;">
                                        <div title="@review.Valoracion" class="row valoracion-producto-individual">
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">@review.Comentario</p>
                                            <p>Fecha: @review.Fecha</p>
                                        </div>
                                    </div>
                                }
                            }
                            @if (ViewBag.ReviewsDelVendedor.Count == 0)
                            {
                                <h4>Aún no tienes ningún review</h4>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
