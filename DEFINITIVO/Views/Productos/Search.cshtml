@using Microsoft.AspNetCore.Identity
@using Heldu.Logic.Interfaces
@using DEFINITIVO.Services
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@inject MessagesService MessagesService
@inject IHelperService HelperService
@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Productos";
    IdentityUser activeUser = await UserManager.GetUserAsync(User);
    string palabraBuscada = ViewBag.inputBuscar;
}
<link href="~/css/Producto_Categoria.css" rel="stylesheet" type="text/css">

<h2>Se han encontrado @Model.Count() resultados para '@palabraBuscada' </h2>

<div class="row row-cols-1 row-cols-md-3 row-cols-xl-3">
    @foreach (Producto producto in Model)
    {
        <div class="col-3 contenedor-carta">
            <div class="card h-100">
                <img src="~/Productos/GetImage/@producto.Id" class="imagen-carta" alt="Imagen_1">
                <div class="item-box-blog-date bg-blue-ui white">
                    <span class="mon"> <strike style="opacity:0.7;">&#8364 @producto.Precio</strike><span class="precio-destacado"> &#8364 @producto.PrecioFinal</span></span>
                </div>
                <div class="cuerpo-carta">
                    <h5 class="card-title">@producto.Titulo</h5>
                    <p class="texto-carta">@producto.Descripcion</p>
                    <div class="row">
                        <div class="texto-stock">
                            <p>Quedan @producto.UnidadesStock!!</p>
                        </div>
                        <div class="mt">
                            <a asp-action="Details" asp-route-id="@producto.Id" class="btn bg-blue-ui white read">Comprar!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/js/Producto_Categoria.js"></script>