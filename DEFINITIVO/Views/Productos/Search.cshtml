@using Microsoft.AspNetCore.Identity
@using Heldu.Logic.Interfaces
@using DEFINITIVO.Services
@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Búsqueda";
    string palabraBuscada = ViewBag.inputBuscar;
}
<link href="~/css/Producto_Categoria.css" rel="stylesheet" type="text/css">

<h2>Se han encontrado @Model.Count() resultados para '@palabraBuscada' </h2>

<div class="row row-cols-1 row-cols-md-3 row-cols-xl-3">
    @foreach (Producto producto in Model)
    {
        <div class="col-3 contenedor-carta">
            <div class="card h-100">
                <img src="~/Productos/GetImage1/@producto.Id" onerror='this.onerror=null;this.src="https://i.ibb.co/FXsjMng/Imagen-no-disponible-min.png";' class="imagen-carta" alt="Imagen 1 del producto">
                <div class="item-box-blog-date bg-blue-ui white">
                    <span class="mon"> <strike class="oldPrice"> @producto.Precio &#8364 </strike><span class="precio-destacado"> @producto.PrecioFinal &#8364 </span></span>
                </div>
                <div class="cuerpo-carta">
                    <a class="card-title" asp-action="Detalles" asp-route-id="@producto.Id">
                        @producto.Titulo
                    </a>
                    <p class="texto-carta">@producto.Descripcion</p>
                    <div class="row">
                        <div class="texto-stock">
                            @if (producto.UnidadesStock > 3)
                            {
                                <p>Quedan @producto.UnidadesStock!</p>
                            }
                            else
                            {
                                <p>Últimas 3!</p>
                            }
                        </div>
                        <div class="mt">
                            <a asp-action="Detalles" asp-route-id="@producto.Id" id="btnComprar" class="btn bg-blue-ui white read btnComprar">Comprar!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/js/Producto_Categoria.js"></script>