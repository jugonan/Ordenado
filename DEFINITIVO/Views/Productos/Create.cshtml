@model Heldu.Logic.ViewModels.ProductoCategoriaVM

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/Productos_Create.css" rel="stylesheet" type="text/css">
<script src="~/js/Productos_Create.js"></script>

<h1>Cargar producto</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">(*) Campos obligatorios</div>
            <div class="form-group">
                <label asp-for="Producto.Titulo" class="control-label"></label>
                <input asp-for="Producto.Titulo" class="form-control" id="titulo-introducido" />
                <span asp-validation-for="Producto.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Descripcion" class="control-label"></label>
                <textarea rows="6" cols="35" asp-for="Producto.Descripcion" class="form-control" id="descripcion-introducida"></textarea>
                <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                <div class="row">
                    <button type="button" class="btn btn-link col-5" id="descripcion-introducidaBtn">+ descripción</button>
                    <button type="button" class="btn btn-danger col-5 offset-1" id="descripcion-introducida-borrar">eliminar</button>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Categoria.Nombre" class="control-label">Categoría</label>
                <select asp-for="Categoria.Id" asp-items="ViewBag.NombreCategoria" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Producto.FechaValidez" class="control-label"></label>
                <input type="date" asp-for="Producto.FechaValidez" class="form-control" value="2020-11-10" id="fecha-introducida" />
                <span asp-validation-for="Producto.FechaValidez" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenesProducto.Imagen1" class="control-label"></label>
                <input type="file" asp-for="ImagenesProducto.Imagen1" class="form-control" id="imagen-introducida" />
                <span asp-validation-for="ImagenesProducto.Imagen1" class="text-danger"></span>
                <button type="button" class="btn btn-link" id="imagen-introducidaBtn">+ añadir imagen</button>
            </div>
            <div class="form-group">
                <label asp-for="ImagenesProducto.Imagen2" class="control-label"></label>
                <input type="file" asp-for="ImagenesProducto.Imagen2" class="form-control" id="imagen-introducida2" />
                <span asp-validation-for="ImagenesProducto.Imagen2" class="text-danger"></span>
                <button type="button" class="btn btn-link" id="imagen-introducidaBtn2">+ añadir imagen</button>
            </div>
            <div class="form-group">
                <label asp-for="ImagenesProducto.Imagen3" class="control-label"></label>
                <input type="file" asp-for="ImagenesProducto.Imagen3" class="form-control" id="imagen-introducida3" />
                <span asp-validation-for="ImagenesProducto.Imagen3" class="text-danger"></span>
                <button type="button" class="btn btn-link" id="imagen-introducidaBtn3">+ añadir imagen</button>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" id="horario-introducida" />
                <span class="text-danger"></span>
                <div class="row">
                    <button type="button" class="btn btn-link col-5" id="horario-introducidaBtn">+ añadir horario</button>
                    <button type="button" class="btn btn-danger col-5 offset-1" id="horario-introducida-borrar">eliminar</button>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" id="reserva-introducida" />
                <span class="text-danger"></span>
                <div class="row">
                    <button type="button" class="btn btn-link col-5" id="reserva-introducidaBtn">+ añadir reserva</button>
                    <button type="button" class="btn btn-danger col-5 offset-1" id="reserva-introducida-borrar">eliminar</button>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" id="entrega-introducida" />
                <span class="text-danger"></span>
                <div class="row">
                    <button type="button" class="btn btn-link col-5" id="entrega-introducidaBtn">+ añadir entrega</button>
                    <button type="button" class="btn btn-danger col-5 offset-1" id="entrega-introducida-borrar">eliminar</button>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" id="recogida-introducida" />
                <span class="text-danger"></span>
                <div class="row">
                    <button type="button" class="btn btn-link col-5" id="recogida-introducidaBtn">+ añadir recogida</button>
                    <button type="button" class="btn btn-danger col-5 offset-1" id="recogida-introducida-borrar">eliminar</button>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input asp-for="Producto.Condiciones" class="form-control" id="otros-introducido" />
                <span asp-validation-for="Producto.Condiciones" class="text-danger"></span>
                <div class="row">
                    <button type="button" class="btn btn-link col-5" id="otros-introducidoBtn">+ añadir</button>
                    <button type="button" class="btn btn-danger col-5 offset-1" id="otros-introducida-borrar">eliminar</button>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="boton-crear-producto" />
            </div>
        </form>
    </div>
    <!-- Quiero poner aquí un layout de cómo se lucirá la oferta que está cargando-->
    <div class="col-md-8">
        <h4 id="titulo-producto"></h4>
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-7">
                    <div id="carouselExampleControls" class="carousel slide" data-interval="false" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="row">
                        <!-- Modificar SRC con js-->
                        <img alt="..." class="img-thumbnail">
                        <!-- Modificar SRC con js-->
                        <img alt="..." class="img-thumbnail">
                        <!-- Modificar SRC con js-->
                        <img alt="..." class="img-thumbnail">
                    </div>
                    <div>
                        <h5>Descripción del producto</h5>
                        <!-- Modificar Descripción con js-->
                        <p id="descripcion-demo"> </p>
                    </div>
                    <div style="align-self:center; margin-bottom:5%;">
                        <div>
                            <h4>Fecha de validez:</h4>
                            <!-- Modificar Fecha con js-->
                            <p id="fecha-demo"></p>
                            <br />
                        </div>
                        <h4>Condiciones</h4>
                        <br />
                        <label><strong>Reserva</strong></label>
                        <ul class="d-none" id="ul-reserva">
                        </ul>
                        <br />
                        <label><strong>Horario</strong></label>
                        <ul class="d-none" id="ul-horario">
                        </ul>
                        <br />
                        <label><strong>Entrega</strong></label>
                        <ul class="d-none" id="ul-entrega">
                        </ul>
                        <br />
                        <label><strong>Recogida</strong></label>
                        <ul class="d-none" id="ul-recogida">
                        </ul>
                        <br />
                        <label><strong>Otros</strong></label>
                        <ul class="d-none" id="ul-otros">
                        </ul>
                    </div>
                    <!-- Div que incluye todos los comentarios existentes-->
                </div>
                <div class="details col-md-5">
                    <div>
                        <!-- Modificar Nombre de empresa con js-->
                        <h6 id="nombreEmpresa-demo"></h6>
                        <div class="rating row">
                            <div class="col-4">
                                <p>(nº de visitas)</p>
                            </div>
                            <div class="stars-fijas col-8">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <p>82 reviews</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <!-- Modificar Titulo de producto con js-->
                            <h4 style="text-transform:capitalize"> </h4>
                        </div>
                        <div class="row">
                            <div class="col-6 offset-6">
                                <div>
                                    <div class="row">
                                        <div class="col-6" style="display:flex;">
                                            <!-- Modificar Precio inicial y mostrar símbolo de € con js-->
                                            <h4><strike id="precioInicial-demo"></strike></h4>
                                            <h4 class="simbolo-euro d-none"><strike>€</strike></h4>
                                        </div>
                                        <div class="col-6" style="display:flex;">
                                            <!-- Modificar Precio final y mostrar símbolo de € con js-->
                                            <h4 style="color: green;"><strong id="precioFinal-demo"></strong></h4>
                                            <h4 class="simbolo-euro d-none" style="color: green;"><strong>€</strong></h4>
                                        </div>
                                    </div>
                                    <p id="descuento-demo"></p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <!-- Modificar Titulo de producto con js-->
                            <h4>Opciones de producto: </h4>
                            <form>
                                <label class="radio-opciones"><input name="opcionesProducto" type="radio" />Opción 1</label><br>
                                <label class="radio-opciones"><input name="opcionesProducto" type="radio" />Opción 2</label><br>
                                <label class="radio-opciones"><input name="opcionesProducto" type="radio" />Opción 3</label><br>
                            </form>
                            <p id="descripcion-demo"></p>
                        </div>
                        <div style="display:grid">
                            <a href="#" style="margin: 2% 0%" class="disabled btn btn-outline-success">Agregar a carrito</a>
                            <a href="#" style="margin: 2% 0%" class="disabled btn btn-outline-danger">Añadir a favoritos<img style="width:6%; margin-left: 4%;" class="d-none" /></a>
                        </div>
                    </div>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index2">Volver al inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
